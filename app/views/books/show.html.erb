<h2>User info</h2>

<%= attachment_image_tag @user, :profile_image, style: "width:100px; height:100px;", format: 'jpg',fallback: "no_images.jpg" %>

<p>name <%= @user.name %></p>

<p>introduction  <%= @user.introduction %></p>

<p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-left" %></p>

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
<h3>errorが<%= @book.errors.count %>件あります</h3>
  <ul>
   <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
<h2>Book detail</h2>

<%= attachment_image_tag @user, :profile_image, style: "width:100px; height:100px;", format: 'jpg',fallback: "no_images.jpg" %>
<h3>Title:</h3>
<p><%= @books.title %></p>
<h3>Body:</h3>
<p><%= @books.body %></p>

<% if user_signed_in? %>
  <% if current_user == @user || current_user.admin? %>
<%= link_to "Edit", edit_book_path(@books.id) %>
<%= link_to 'Destroy', book_path(@books.id),method: :delete, "data-confirm" => "Are you Sure?"%>
<% end %>
<% end %>