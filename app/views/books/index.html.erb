<h2>User info</h2>

<%= attachment_image_tag @user, :profile_image, style: "width:100px; height:100px;", format: 'jpg',fallback: "no_images.jpg" %>

　<p>name  <%= @user.name %></p>

  <p>introduction  <%= @user.introduction %></p>

  <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-left" %></p>

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
<h3>errorが<%= @book.errors.count %>件あります</h3>
  <ul>
   <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>

    <h2>Books</h2>
        <table class="clearfix">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <% @books.each do |book| %>
            <tbody>
             <tr>
              <td>
                <%= link_to book_path(book.id) do %>
                <%= attachment_image_tag book.user, :profile_image, style: "width:30px; height:30px;", format: 'jpg',fallback: "no_images.jpg" %>
                  <% end %>
                </td>

              <td><%= link_to book.title, book_path(book.id)%></td>

              <td><%= book.body %></td>
            </tr>
            </tbody>
            <% end %>
        </table>